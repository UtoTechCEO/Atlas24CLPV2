---
// pages/index.astro

export const prerender = true;


import Baselayout from "../layouts/Baselayout.astro";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Howto from "../components/Howto.astro";
import Trust from "../components/Trust.astro";
import Usp from "../components/Usp.astro";
import Stickycta from "../components/Stickycta.astro";
import Footer from "../components/Footer.astro";


/* SEO */
const title = "Atlas24 – Umzugsangebote vergleichen";
const description =
  "Vergleichen Sie geprüfte Umzugsfirmen in der Schweiz. Gratis & unverbindliche Offerten in 2 Minuten – transparent und schnell.";
// Variante A: hart codiert
const canonical = "https://atlas24.ch/";

/* Variante B (empfohlen), wenn in astro.config.mjs `site` gesetzt ist:
const canonical = new URL(Astro.url.pathname, Astro.site).href;
*/
---

<Baselayout {title} {description} {canonical}>
  <Header />
  <Hero />
  <Trust/>
  <Stickycta/>
  <Howto />
  <Usp />
  <Footer />
  <script 
    type="text/plain"
    data-cookieconsent="functionality"
    src="/assets/atlui_form_verification.js">
  </script>
</Baselayout>
